@{
}
@model Mytask.Models.User;

<div class="container">
<form method="post" action="DisplayById">
    <div class="mb-3">
        <label class="form-label">UserId</label>
            <input type="text" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" name="uid">
            <br />
            <input type="submit" name="sub" value="Display" class="btn btn-danger"/>
            <input type="submit" name="sub" value="Delete" class="btn btn-danger" />
            <input type="submit" name="sub" value="Edit" class="btn btn-danger" />
    </div>


</form>
</div>

<div class="container">
    <table class="table table hover">
        <tr>
            
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Salary</th>
            <th>Date</th>
            <th>Department</th>
            <th>Description</th>
        </tr>
        @{
            if (Model!=null)
            {
                <tr>
                    <td>@Model.UserId</td>
                    <td>@Model.Name</td>
                    <td>@Model.Email</td>
                    <td>@Model.Phone</td>
                    <td>@Model.Address</td>
                    <td>@Model.Salary</td>
                    <td>@Model.CreatedDate</td>
                    <td>@Model.Department</td>
                    <td>@Model.Description</td>

                </tr>
            }
        }

    </table>
</div>